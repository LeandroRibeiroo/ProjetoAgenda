<%- include ('includes/head') %> <%- include ('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Bem vindo à sua agenda!</h1>
      <p class="text-center lead">Seus contatos estão logo abaixo.</p>
    </div>
      <%- include('includes/messages') %>
    <% if(contatos.length > 0) { %>
    <div class="responsive-table">
      <table class="table my-3">
        <% contatos.forEach(contato => { %>
        <tr>
          <td><%= contato.nome %></td>
          <td><%= contato.sobrenome %></td>
          <td><%= contato.numero %></td>
          <td><%= contato.email %></td>
          <td><a href="/contato/cadastro/<%= contato._id %>">Editar</a></td>
          <td><a class="text-danger" href="/contato/delete/<%= contato._id %>">Excluir</a></td>
        </tr>
        <% }); %>
      </table>
    </div>
    <% } else { %>
      <p class="text-center lead">Não há contatos em sua agenda :(</p>
          <% } %>
  </div>
  <div class="col-lg-2"></div>
</div>

<%- include ('includes/footer') %>
