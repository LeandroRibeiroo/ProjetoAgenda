<%- include ('includes/head') %> <%- include ('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <p class="text-center lead">Crie ou edite seus contato abaixo.</p> 
      <p class="text-center lead"> Você deve enviar o E-mail ou o telefone da pessoa, não se esqueça! :)</p>

      <%- include('includes/messages') %>

      <% if(contato._id) { %>
      <form action="/contato/edit/<%= contato._id %>" class= "form-edit" method="POST">
        <% } else { %>
        <form action="/contato/register"  class="form-edit" method="POST">
          <% } %>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <div class="mb-3">
          <label>Nome</label>
          <input value="<%= contato.nome %>" type="text" class="form-control form-control-edit" name="nome" />
        </div>
        <div class="mb-3">
          <label>Sobrenome</label>
          <input value="<%= contato.sobrenome %>" type="text" class="form-control" name="sobrenome" />
        </div>
        <div class="mb-3">
          <label>E-mail</label>
          <input value="<%= contato.email %>" type="email" class="form-control" name="email" />
        </div>
        <div class="mb-3">
          <label>Número de telefone</label>
          <input value="<%= contato.numero %>" type="tel" class="form-control" name="numero" />
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
      </form>
    </div>
  </div>
  <div class="col-lg-2"></div>
</div>

<%- include ('includes/footer') %>
